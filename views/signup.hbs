<div class="wrapper">
    <div class="row">
        <div class="col-md-4" id="signupSheet">
            <form id="signup" name="signup" method="post" action="/signup">
                <label for="email" style="font-size: 45px">Email Address</label>
                <br>
                <input class="text" name="email" type="email" />
                <br>
                <label for="firstname" style="font-size: 45px">Firstname</label>
                <br>
                <input name="firstname" type="text" />
                <br>
                <label for="lastname" style="font-size: 45px">Lastname</label>
                <br>
                <input name="lastname" type="text" />
                <br>
                <label for="password" style="font-size: 45px">Password</label>
                <br>
                <input name="password" type="password" />
                <br>
                <input class="btn" type="submit" value="Sign Up" />
                <br>
                <a href="/signin" class="btn btn-primary btn-lg" role="button" style="float: left">Cancel</a>
            </form>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
    </div>
