    <div class="container">
       
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-5">
                <button type="button" class="btn btn-outline-success" id="btn-post" data-toggle="modal" data-target="#myModal">Post</button>
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content" id="test">
                            <div class="modal-header">
                                <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                                <h4 class="modal-title">Post</h4>
                            </div>
                            <div class="modal-body">
                                <form action='/post' method='post'>
                                    <div class="form-group">
                                        <label for="postTitle">Enter Title Here</label>
                                        <textarea class="form-control title_area" name='userTitle'id="post-title" rows="3"></textarea>
                                        <label for="postBody">Enter post here</label>
                                        <textarea class="form-control post_area" name='userBody' id="post-body" rows="3"></textarea>
                                    </div>
                                    <button type="submit" value="Submit" class="btn btn-outline-primary" id="submit-post">Submit</button>
                                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                                </form>
                            </div>
                            <div class="modal-footer">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="myModal1" role="dialog">
                    <div class="modal-dialog modal-lg">
                        <!-- Modal content-->
                        <div class="modal-content" id="test">
                            <div class="modal-header">
                                <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                                <h4 class="modal-title">Comments</h4>
                            </div>
                            <div class="modal-body">
                                <div class="comments-container">
                                    <div class="comments-row">

                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-success " data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-outline-success">All Posts</button>
            </div>
            <div class="col-md-4">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search Topic" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
    <div class="post-container">
        <div class="post-row">
            {{#each post}}
                {{>items/post-block}}
            {{/each}}
        </div>
    </div>

